.container {
}

.row1, .row2, .row3, .row4 {
  padding: 25rpx;
  background-color: white;
}

.row4{
  margin-top: 20rpx;
}

.gray-line {
  height: 1px;
  width: 100%;
  background-color: rgba(128, 128, 128, 0.356);
}

.common-css {
  font-weight: 400;
  color: gray;
  font-size: 25rpx;
}

.room {
  width: 100%;
}

.room-num {
  display: inline-block;
}

.room-num-text {
  color: #ffd700;
}

.inputRow {
  padding: 10rpx;
  display: flex;
}

.inputTag {
  flex: 0.2;
  text-align: center;
}

.inputValue {
  flex: 0.6;
}

.inputValuePlaceHolder {
  font-weight: 300;
  font-size: 25rpx;
}

.live-in-count {
  color: #ffd700;
}

/*主容器*/

.stepper {
  width: 80px;
  height: 26px;
  display: inline-block;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  position: absolute;
  right: 50rpx;
}

/*加号和减号*/

.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}
