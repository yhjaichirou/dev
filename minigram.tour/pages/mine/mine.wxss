@import "./common.wxss";

.navigator-hover button {
  background-color: #dedede;
}

.other-navigator-hover button {
  background-color: #dedede;
}

.g-bda-userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 10rpx;
  width: 90%;
  top: 20%;
  left: 5%;
  position: absolute;
  height: 20%;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  top: -40%;
  margin-bottom: 2rpx;
  border-radius: 50%;
  /* border: 2px solid #fff; */
  position: absolute;
}

.userinfo-avatar-logo {
  text-align: center;
  line-height: 58pt;
  font-weight: 14pt;
  color: #51423b;
  background-color: #e5e5e5;
  width: 150rpx;
  height: 150rpx;
  top: -40%;
  margin-bottom: 2rpx;
  border-radius: 50%;
  position: absolute;
}

.i-header {
  height: 350rpx;
  background-color: #ffd700;
  text-align: center;
}

.userinfo-nickname {
  color: #fff;
}

.userinfo-phone {
  top: 30%;
  color: black;
  font-size: 20rpx;
  position: absolute;
}

/* 退出账号按钮 */

.loginBtn, .logoutBtn {
  margin-bottom: 25px;
  width: 320rpx;
  top: 50%;
  background-color: #ffd700;
  color: black;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  position: absolute;
}

.logoutBtn::after {
  border-radius: 98rpx;
  border: 0;
}
