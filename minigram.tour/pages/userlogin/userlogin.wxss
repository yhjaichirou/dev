@import "./wxlogin.wxss";
@import "./top.base64.wxss";

page{
  height: 100%;
  width:100%;
}
.container {
  background-color: #FAFAFA;
  width: 100%;
  height: 100%;
}

.login-container {
  background-color: white;
  position: fixed;
  padding: 2.5%;
  margin-left: 7.5%;
  margin-top: -30%;
  width: 80%;
  height: 60%;
  border-radius: 2.5%;
}

.input {
  border: none;
  border-bottom: 1px solid #999;
  font-size: 12px;
  line-height: 30px;
  height: 30px;
}

.input-placeholder {
  color: #999;
}

.register {
  color: #999;
  font-size: 12px;
}

/* 验证码 start */
.section {
  display: flex;
}
.verification {
  flex: 1;
  margin: 20px 0;
}
.input-placeholder {
  color: #aaa!important;
}
.verification-btn {
  border: 1px solid #bbb!important;
  color: #777!important;
  border-radius: 0px;
  height: 32px;
  margin: 20px 0 20px 20px;
}
/* 验证码 end */