/* pages/main/index.wxss */

.container {
  height: 100%;
  widows: 100%;
  background-color: rgb(249, 249, 249);
  text-align: center;
  padding-top: 30%;
}

.title {
  background-color: #efeff4;
}

.container-box {
  width: 61%;
  display: inline-block;
  height: 50vh;
  text-align: center;
}

.img-box {
  width: 100%;
  background-color: #fff;
  position: relative;
  text-align: center;
  display: inline-block;
}

.qrCanvas {
  width: 400rpx;
  height: 400rpx;
  display: inline-block;
}

.ticketNames {
  text-align: center;
}
.ticketName{
  font-weight: 300;
  font-size: 25rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}
