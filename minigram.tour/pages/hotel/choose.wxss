page {
   width: 100%;
  height: 100%;
  background: #f0eff5;
  overflow-y: hidden;
}
 
/* scroll-view容器 */
.container {
  height: 100%;
}


/* 背景图 */

.bg {
  height: 100%;
  width: 100%;
  z-index: -1;
}

.maskTop {
  position: absolute;
  height: 30rpx;
  background-color: #ffd700;
  width: 100%;
  top: 0;
  z-index: 1;
}

.popupForm {
  background-color: white;
  position: fixed;
  overflow: hidden;
  width: 95%;
  height: 35%;
  top: 40%;
  left: 20rpx;
  border-radius: 10rpx;
  right: 0px;
  padding-top: 8%;
}

/* 表单每行flex布局 start */

.form-row {
  display: flex;
  height: 25%;
  margin: 0 auto;
  width: 100%;
}

/* 左侧icon样式 */

.form-row .icon {
  flex: 0.1;
  padding: 10rpx;
  width: 20rpx;
  height: 50rpx;
}

.form-row image {
  flex: 0.1;
}

.form-row view {
  flex: 0.6;
}

.form-row .arrow {
  flex: 0.4;
  text-align: right;
  /* font-weight: 400; */
  font-size: 15px;
  color: rgba(153, 153, 153, 0.815);
  font-style: normal;
  letter-spacing: 0px;
  line-height: 200%;
  text-decoration: none;
  padding-right:10rpx;
}

/* 表单每行flex布局 end */

.startDate .week, .endDate .week, .searchWordPlaceHolder {
  color: rgba(153, 153, 153, 0.815);
  font-weight: 400;
  line-height: 50rpx;
  font-size: 25rpx;
}

.form-row .searchBtn {
  width: 80%;
  height: 80%;
  font-weight: 200;
  font-size: 15px;
  line-height: 250%;
  padding: 0;
  text-decoration: none;
  color: black;
  background-color: #ffd700;
}

button::after {
  border: none;
}
