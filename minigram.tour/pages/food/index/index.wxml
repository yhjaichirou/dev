<view class='vertical_line'></view>
<view class='name'>附近酒店</view>

<block wx:for="" wx:for-index="{{index}}">
  <view class='item'>
    <image src='/images/authorize/logo.png' mode='aspectFit'></image>
    <view class='right'>
      <view>{{"珠海长隆横琴湾酒店"}}</view>
      <!-- <image src='/images/authorize/logo.png' class='icon' mode='aspectFit'></image> -->
