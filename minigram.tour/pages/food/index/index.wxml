      <view class='comment'>评论 {{777}}</view>
      <view class='ding'>已定 {{777}}</view>
      <view class='star'>
        <image></image>
        <image></image>
        <image></image>
        <image></image>
        <image></image>
      </view>
      <view class='address'>
        <text decode='true'>{{"横琴，靠近横琴口岸"}}&emsp;&emsp;{{"1.5km"}}</text>
      </view>
      <view class='price'>
        <view>起</view>
        <view class='yellow'>{{528}}</view>
        <view>￥</view>
      </view>
    </view>
    <view class='line'></view>
  </view>
</block>


