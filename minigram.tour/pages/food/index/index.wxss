.vertical_line{
  width: 2px;
  height: 20px;
  background-color: #FFDD4A;
  float: left;
  margin: 62px 0px 0px 15px;
}

.name{
  float: left;
}

view{
  font-size: 18px;
  color: #333;
  float: left;
  margin: 60px 0px 0px 3px;
}

.item{
  width: 90%;
  height: 90px;
  clear: both;
  position: relative;
  margin: 10px 15px 0px 15px;
}
.item image{
  width: 80px;
  height: 80px;
  float: left;
  background-color: #0f0;
}

.item .line{
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  margin: 10px 0px 0px 0px;
}

.item .right{
  width: 68%;
  height: 80px;
  float: left;
  margin: 0px 0px 0px 10px;
}
.item .right view{
  font-size: 16px;
  color: #333;
  margin: 0px 0px 0px 0px;
}

.item .right .comment{
  font-size: 10px;
  color: #999;
  float: right;
  margin: 5px 0px 0px 0px;
}

.item .right .icon{
  width: 5px;
  height: 15px;
  float: right;
  background-color: #fff;
   margin: 4px 0px 0px 5px;
}

.item .right .ding{
  font-size: 10px;
  color: #999;
  clear: both;
  position: absolute;
  bottom: 10px;
  margin: 0px 0px 0px 0px;
}

.item .right .address{
  font-size: 10px;
  color: #999;
  clear: both;
  position: absolute;
  bottom: 26px;
  margin: 0px 0px 0px 0px;
}

.item .right .price{
  font-size: 10px;
  color: #999;
  clear: both;
  position: absolute;
  bottom: 10px;
  right: 0px;
  margin: 0px 0px 0px 0px;
}

.item .right .price view{
  font-size: 10px;
  color: #999;
  float: right;
  margin: 5px 0px 0px 0px;
}

.item .right .price .yellow{
  font-size: 16px;
  color: #FFBD0C;
  float: right;
  margin: 0px 0px 0px 0px;
}

.item .right .star{
  clear: both;
  background-color: #fff;
  margin: 3px 0px 0px 0px;
}

.item .right image{
  width: 10px;
  height: 10px;
  float: left;
  background-color: #f0f;
  margin: 0px 0px 0px 2px;
}
