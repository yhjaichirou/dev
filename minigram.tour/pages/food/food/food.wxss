/* pages/food/food.wxss */
view{
  font-size: 14px;
  color: #333;
  margin-left: 15px;
  margin-top: 15px;
}
.name{
  color: #333;
  font-size: 16px;
  margin-left: 14px;
  font-weight:bold;
  margin-top: 60px;
}

.line{
  background-color: #e5e5e5;
  width: 100%;
  height: 1px;
  margin-top: 13px;
  margin: 10px 0px 0px 0px;
}

.img{
  width: 60px;
  height: 60px;
  background-color: #00f;
  float: left;
}

.item_name{
  font-size: 14px;
  color: #333;
  font-weight:bold;
  padding-left: 0px;
  margin: 0px 0px 0px 60px;
}

.item_num{
  font-size: 11px;
  color: #333;
  padding-left: 0px;
  margin: 8px 0px 0px 60px;
}

.item_price{
  font-size: 11px;
  color: #666;
  padding-left: 0px;
  margin: 3px 0px 0px 60px;
}

view .line{
  width: 95%;
  margin: 10px 10px 0px 0px;
}

.bloak{
  background-color: #fafafa;
  height: 5px;
  margin: 10px 0px 0px 0px;
}

view .buyer_title{
  color: #666;
  font-size: 12px;
  height: 15px;
  clear: both;
  margin: 0px;
}

view .buyer_title view{
  font-size: 10px;
  color: #999;
  margin: 3px 0px 0px 0px;
  float: left;
}
view .buyer_title .message{
  font-size: 12px;
  color: #666;
  margin: 0px 10px 0px 0px;
  float: left;
}

view .buyer_title .yellow{
  font-size: 10px;
  color: #FFCC53;
  margin: 3px 0px 0px 0px;
  float: left;
}

view .cc{
  font-size: 16px;
  color: #333;
  float: left;
  clear: left;
  margin: 10px 0px 5px 10px;
}

view input{
  font-size: 10px;
  margin: 13px 0px 0px 70px;
}

.buy{
  width: 100%;
  height: 50px;
  position: absolute;
  bottom: 0px;
}

.buy view{
  font-size: 12px;
  color: #333;
  align-content: center;
  float: left;
}

.buy .allprice{
  font-size: 18px;
  color: #FFBD0C;
  align-content: center;
  float: left;
  margin: 9px 0px 0px 0px;
}

.buy .button{
  width: 80px;
  height: 27px;
  background-color: #FFCC53;
  border-radius:13px;
  float: right;
  margin: 10px 30px 0px 0px;
}

.buy .button view{
  font-size: 14px;
  color: #fff;
  font-weight: bold;
  clear: both;
  margin: 4px 0px 0px 26px;
}