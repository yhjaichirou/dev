/* pages/foodcomment/foodcomment.wxss */
image{
  width: 18px;
  height: 18px;
  background-color: #f2a12a;
  float: left;
  margin: 5px 0px 0px 14px;
}

.title{
  font-size: 16px;
  color: #333;
  margin: 0px 0px 0px 9px;
}

.send{
  width:34px;
  height:18px;
  font-size: 11px;
  color: #FFFEFE;
  align-content: center;
  background:rgba(255,204,83,1);
  border-radius:9px;
  float: right;
  padding-left: 15px;
  margin: 7px 15px 0px 0px;
}

.line{
  height: 1px;
  background-color: #e5e5e5;
  margin: 14px 15px 0px 15px;
}

.comment{
  height: 236px;
  margin: 0px 15px 0px 15px;
}

.comment .title{
  float: left;
  margin: 20px 0px 0px 0px;
}

.comment view image{
  width:24px;
  height:24px;
  float: left;
  background:rgba(204,204,204,1);
  border-radius:3px;
  margin: 18px 0px 0px 8px;
}

.comment textarea{
  font-size: 12px;
  color: #333;
  clear: both;
  width: 100%;
  float: left;
  margin: 20px 0px 0px 0px;
}

.comment .line{
  clear: both;
  width: 100%;
  float: left;
  margin: 0px 0px 0px 0px;
}

.comment .num{
  font-size: 10px;
  color: #999;
  float: left;
  margin: 3px 0px 10px 0px;
}

.line2{
  width: 100%;
  height: 5px;
  background-color: #fafafa;
}
.line2+.title{
  margin: 14px 0px 0px 15px;
}

.line2+.title+view{
  width: 100%;
  height: 80px;
  clear: both;
  background-color: #fee;
  margin: 15px 15px 0px 15px;
}

.line2+.title+view image{
  width: 80px;
  height: 80px;
  clear: both;
  background-color: #0ee;
  margin: 0px 0px 0px 0px;
}

.imgde{
  font-size: 10px;
  color: #999;
  margin: 6px 0px 20px 15px;
}

.line2+view{
  height: 45px;
  width: 100%;
  margin: 0px;
}

.line2+view view{
  font-size: 12px;
  color: #999;
  float: left;
  margin: 15px 0px 0px 14px;
}

.line2+view .title{
  font-size: 16px;
  color: #333;
  float: left;
  margin: 13px 0px 0px 14px;
}

.line2+view input{
  font-size: 12px;
  color: #999;
  float: left;
   margin: 8px 0px 0px 10px;
}
